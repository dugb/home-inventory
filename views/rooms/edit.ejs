<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= room.name %></h1>
      <div style="width: 30%; margin: 30px auto;">
        <form action="/rooms/<%= room._id %>?_method=PUT" method="post">
          <div class="form-group">
            <input class="form-control" type="text" value="<%= room.name %>" name="room[name]" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" value="<%= room.image %>" name="room[image]" >
          </div>

          <div class="form-group">
            <input class="form-control" type="text" value="<%= room.description %>" name="room[description]" >
          </div>

          <div class="form-group">
            <button class="btn btn-large btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/rooms">Go Back</a>
      </div>

    </div>
</div>
<% include ../partials/footer %>
