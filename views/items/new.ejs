<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Item to <%= room.name %></h1>
      <div style="width: 30%; margin: 30px auto;">
        <form action="/rooms/<%= room._id %>/items" method="post">
          <div class="form-group">
            <input class="form-control" type="text" placeholder="name" name="item[name]" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" placeholder="Description" name="item[description]" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" placeholder="Image Url" name="item[image]" >
          </div>
          <div class="form-group">
            <button class="btn btn-large btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/rooms">Go Back</a>
      </div>

    </div>
</div>
<% include ../partials/footer %>
