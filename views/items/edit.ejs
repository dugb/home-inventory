<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= item.name %></h1>
      <div style="width: 30%; margin: 30px auto;">
        <form action="/rooms/<%= room_id %>/items/<%= item._id %>?_method=PUT" method="post">
          <div class="form-group col-md-6">
            <img class="img-fluid img-thumbnail" src="<%= item.image %>" alt="">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" value="<%= item.name %>" name="item[name]" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" value="<%= item.description %>" name="item[description]" >
          </div>
          <div class="form-group">
            <input class="form-control" type="text" value="<%= item.image %>" name="item[image]" >
          </div>
          <div class="form-group">
            <button class="btn btn-large btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/rooms">Go Back</a>
      </div>

    </div>
</div>
<% include ../partials/footer %>
